<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="critical_forecast_search" model="ir.ui.view">
        <field name="name">Critical Forecast Search</field>
        <field name="model">stock.critical_forecast</field>
        <field name="arch" type="xml">
            <search>
                <field name="default_code"/>
                <field name="type_description"/>
                <field name="product_id"/>
                <filter name="group_type" string="By Source Document" context="{'group_by': 'origin'}"/>
            </search>
        </field>
    </record>

    <record id="critical_forecast_list" model="ir.ui.view">
        <field name="name">Critical Forecast List</field>
        <field name="model">stock.critical_forecast</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="default_code" />
                <field name="product_type" invisible="1"/>
                <button class="oe_stat_button" name="action_product_forecast_report" type="object" icon="fa-cubes" attrs="{'invisible': [('product_type', '!=', 'product')]}" />
                <field name="product_id" widget="many2one" />
                <field name="type_description"/>
                <field name="action_date"/>
                <field name="critical_date"/>
                <field name="replenish_delay"/>
                <field name="qty_available"/>
                <field name="virtual_available"/>
                <field name="min_qty"/>
                <field name="product_min_qty"/>
                <field name="qty_in"/>
                <field name="qty_out"/>
                <field name="promised_qty"/>
                <field name="agreed_qty"/>
                <field name="origin"/>
                <button class="oe_stat_button" name="action_open_origin" type="object" icon="fa-external-link" />
            </tree>
        </field>
    </record>

    <record id="action_critical_forecast" model="ir.actions.act_window">
        <field name="name">Critical Forecast</field>
        <field name="res_model">stock.critical_forecast</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_critical_forecast" action="action_critical_forecast" name="Critical Forecast" sequence="11" parent="stock.menu_warehouse_report"/>

</odoo>
