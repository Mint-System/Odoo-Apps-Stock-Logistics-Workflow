<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="host_view_tree" model="ir.ui.view">
    <field name="name">amqp_base.host_view_tree</field>
    <field name="model">amqp.host</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="url" />
      </tree>
    </field>
  </record>

  <record id="host_view_form" model="ir.ui.view">
    <field name="name">amqp_base.host_view_form</field>
    <field name="model">amqp.host</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" />
            <field name="url" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="publisher_view_tree" model="ir.ui.view">
    <field name="name">amqp_base.publisher_view_tree</field>
    <field name="model">amqp.publisher</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="topic" />
        <field name="routing_key" />
        <field name="host_id" />
      </tree>
    </field>
  </record>

  <record id="publisher_view_form" model="ir.ui.view">
    <field name="name">amqp_base.publisher_view_form</field>
    <field name="model">amqp.publisher</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" />
            <field name="topic" />
            <field name="routing_key" />
            <field name="host_id" />
            <field name="message_ids" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="consumer_view_tree" model="ir.ui.view">
    <field name="name">amqp_base.consumer_view_tree</field>
    <field name="model">amqp.consumer</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="topic" />
        <field name="routing_key" />
        <field name="host_id" />
      </tree>
    </field>
  </record>

  <record id="consumer_view_form" model="ir.ui.view">
    <field name="name">amqp_base.consumer_view_form</field>
    <field name="model">amqp.consumer</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="start" type="object" string="Start" />
        </header>
        <sheet>
          <group>
            <field name="name" />
            <field name="topic" />
            <field name="routing_key" />
            <field name="host_id" />
            <field name="message_ids" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="amqp_host_act" model="ir.actions.act_window">
    <field name="name">AMQP Hosts</field>
    <field name="res_model">amqp.host</field>
    <field name="view_mode">tree,form</field>
  </record>
  <record id="amqp_publisher_act" model="ir.actions.act_window">
    <field name="name">AMQP Publishers</field>
    <field name="res_model">amqp.publisher</field>
    <field name="view_mode">tree,form</field>
  </record>
  <record id="amqp_consumer_act" model="ir.actions.act_window">
    <field name="name">AMQP Consumers</field>
    <field name="res_model">amqp.consumer</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_amqp" name="AMQP" parent="base.menu_custom" sequence="30" />

  <menuitem name="Hosts" id="amqp_host" action="amqp_host_act" parent="menu_amqp" sequence="5" />
  <menuitem name="Publishers" id="amqp_publisher" action="amqp_publisher_act" parent="menu_amqp" sequence="10" />
  <menuitem name="Consumers" id="amqp_consumer" action="amqp_consumer_act" parent="menu_amqp" sequence="15" />
</odoo>